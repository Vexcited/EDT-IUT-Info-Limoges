{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "moduleResolution": "Bundler",
    "target": "ESNext",
    "module": "ESNext",

    "jsxImportSource": "solid-js",
    "jsx": "preserve",

    "strict": true,
    "noEmit": true,
    "allowJs": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "types": [
      "vinxi/types/client",
      "vite-plugin-pwa/solid",
      "unplugin-icons/types/solid"
    ]
  },

  "include": ["src", "vite.config.ts", "uno.config.ts", ".eslintrc.cjs"],
  "exclude": ["node_modules", "dist", ".solid"]
}
