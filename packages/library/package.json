{
  "name": "edt-iut-info-limoges",
  "version": "1.5.0",
  "description": "Emploi du temps de l'IUT Informatique de Limoges",
  "license": "MIT",
  "private": false,
  "files": [
    "dist"
  ],
  "keywords": [
    "timetable",
    "university",
    "pdf",
    "iut",
    "France"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "release": "release-it",
    "build": "node ./scripts/make_pdfjs_bundle.js && rimraf dist && tsup ./src/index.ts --dts --minify terser --format esm,cjs --sourcemap",
    "test": "jest"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build"
      ]
    },
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagAnnotation": "Release v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": false
    },
    "npm": {
      "publish": true,
      "skipChecks": true,
      "versionArgs": [
        "--workspaces-update=false"
      ]
    }
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.5",
    "@types/luxon": "^3.3.2",
    "@types/node": "^20.6.3",
    "jest": "^29.7.0",
    "release-it": "^16.1.5",
    "rimraf": "^5.0.1",
    "terser": "^5.20.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0"
  },
  "author": "Mikkel RINGAUD <mikkel@milescode.dev> (https://github.com/Vexcited)",
  "repository": "github:Vexcited/EDT-IUT-Info-Limoges",
  "dependencies": {
    "luxon": "^3.4.3"
  }
}
